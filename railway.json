{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "dockerfile"
  },
  "deploy": {
    "startCommand": "/usr/bin/supervisord -c /etc/supervisord.conf",
    "restartPolicyMaxRetries": 5
  },
  "volumes": [
    {
      "name": "storage",
      "mountPath": "/app/storage/app/public",
      "size": "5GB"
    }
  ]
}
